<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit_et_land.web.cust.CustomerMapper">
<resultMap id="result" type="hashmap">
  <id property="customerID" column="CUSTOMER_ID" />
  <result property="customerName" column="CUSTOMER_NAME"/>
  <result property="password" column="PASSWORD"/>
  <result property="ssn" column="SSN"/>
  <result property="photo" column="PHOTO"/>
  <result property="phone" column="PHOEN_NUMBER"/>
  <result property="city" column="CITY"/>
  <result property="address" column="ADDRESS"/>
  <result property="postalCode" column="POSTAL_CODE"/>
  <result property="rownum" column="ROWNUM"/>
</resultMap>
	  	<select id="selectCustomer" resultType="com.bit_et_land.web.cust.Customer">
	 		   SELECT 
			  	CUSTOMER_ID customerID,
	        	CUSTOMER_NAME customerName,
	        	PASSWORD,
	        	SSN,
	        	PHOTO,
	        	PHOEN_NUMBER phone,
	        	CITY,
	        	ADDRESS,
	        	POSTAL_CODE postalCode
			   FROM CUSTOMERS
	 		   WHERE CUSTOMER_ID LIKE #{customerID}
		   		<if test="password !=null">
		 		   AND PASSWORD LIKE #{password}
		   		</if>
	 	 </select>
				 <!-- SELECT 
			  	CUSTOMER_ID customerID,
	        	CUSTOMER_NAME customerName,
	        	PASSWORD,
	        	SSN,
	        	PHOTO,
	        	PHOEN_NUMBER phone,
	        	CITY,
	        	ADDRESS,
	        	POSTAL_CODE postalCode
			   FROM CUSTOMERS -->
			   
 	   	<select id="selectCustomers" resultMap="result"
	 	   	parameterType="com.bit_et_land.web.cmm.Proxy">
				SELECT @ROWNUM:=@ROWNUM+1 AS rownum,
	            C.*
	  			FROM CUSTOMERS C, (SELECT @ROWNUM:=0)TMP
	  			ORDER BY rownum DESC
	    		LIMIT #{startRow}, #{pageSize}
 		 </select>
	 	 
	 	 
 	   <insert 
	 	 	id="insertCustomer"
	 	 	parameterType="com.bit_et_land.web.cust.Customer"
			flushCache="true"
			statementType="PREPARED"
			timeout="20">
		        INSERT INTO CUSTOMERS (CUSTOMER_ID,
		        	CUSTOMER_NAME,
		        	PASSWORD,
		        	SSN,
		        	PHOEN_NUMBER,
		        	CITY,
		        	PHOTO,
		        	ADDRESS,
		        	POSTAL_CODE)
		        VALUES (#{customerID}, 
		            #{customerName},
		            #{password}, 
		            #{ssn}, 
		            #{phone},
		            #{city},
		            #{photo},
		            #{address},
		            #{postalCode}
		        )
		  </insert>
		  
		 <update
			  id="updateCustomer"
			  parameterType="com.bit_et_land.web.cust.Customer"
			  flushCache="true"
			  statementType="PREPARED"
			  timeout="20">
			  UPDATE CUSTOMERS
			  SET PHOEN_NUMBER = #{phone},
			  CITY = #{city}, 
			  ADDRESS = #{address},
			  POSTAL_CODE = #{postalCode},
			  PASSWORD = #{password}
			  WHERE CUSTOMER_ID LIKE #{customerID}
		  </update>
		
		  <delete
			  id="deleteCustomer"
			  parameterType="com.bit_et_land.web.cust.Customer"
			  flushCache="true"
			  statementType="PREPARED"
			  timeout="20">
			  DELETE FROM CUSTOMERS 
			  WHERE CUSTOMER_ID LIKE #{customerID}
		  </delete>
		  
</mapper>